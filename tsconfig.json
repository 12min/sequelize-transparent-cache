{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "allowJs": false,
      "declaration": true,
      "esModuleInterop": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "types": [
        "node",
        "jest"
      ],
    },
    "include": [
      "packages/*/(src|test)/**/*"
    ]
  }